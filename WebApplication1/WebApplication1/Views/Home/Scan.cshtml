<h2>Сканирование</h2>

@if (ViewBag.Results != null)
{
    foreach (var element in ViewBag.Results)
    {
        <p>@element</p>
    }
    <br />
    <br />
    <form method="post">
        <input type="submit" value="Сохранить" />
    </form>

}
else
{
    <form method="post">
        <p>
            URL:<input type="text" name="url" pattern="https?:\/\/(www\.)?[-a-zA-Z0-9@@:%._\+~#=]{1,256}\.[a-zA-Z0-9()]{1,6}\b([-a-zA-Z0-9()@@:%_\+.~#?&amp;//=]*)" required />
        </p>
        <br />
        <br />
        <p>
            Глубина:<input type="number" name="depth" required />
        </p>
        <br />
        <br />
        <input type="submit" value="Искать" />
    </form>
}
